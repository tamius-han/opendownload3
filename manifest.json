{
  "manifest_version": 2,
  "name": "OpenDownloadÂ³",
  "version": "2a1",
  
  "icons": {
    "32":"res/icons/uw-32.png",
    "64":"res/icons/uw-64.png"
  },
  
  "description": "Re-introduces the download file dialog, this time in a form of a WebExtension.",
  
  
  
  "content_scripts": [{
    "matches": ["*://*/*"],
    "js": [ 
